<?xml version="1.0"?>
<psalm
    findUnusedCode="false"
>
    <projectFiles>
        <directory name="include" />
        <directory name="tests" />
    </projectFiles>

    <issueHandlers>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </PropertyNotSetInConstructor>
        <UndefinedClass>
            <errorLevel type="suppress">
                <directory name="tests"/>
            </errorLevel>
        </UndefinedClass>
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="tests/unit/Config/AccessControlValidatorTest.php"/>
                <file name="tests/unit/Config/ProviderValidatorTest.php"/>
            </errorLevel>
        </ArgumentTypeCoercion>
    </issueHandlers>
</psalm>
